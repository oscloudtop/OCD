<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/POPWND_VIDEO_DECODE"
        android:height="@dimen/pop_wnd_iteam_height"
        android:id="@+id/popwnd_video_decoder"
        android:background="@color/pop_windwon_back_ground"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center_vertical" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/popwnd_video_decoder_list" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PictureRatio"
        android:id="@+id/popwnd_video_picture_ratio"
        android:height="@dimen/pop_wnd_iteam_height"
        android:background="@color/pop_windwon_back_ground"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center_vertical" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/popwnd_video_picture_list" />

</merge>
