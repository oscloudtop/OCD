    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/POPWND_AUDIO"
        android:height="@dimen/pop_wnd_iteam_height"
        android:id="@+id/popwnd_audio_track"
        android:background="@color/pop_windwon_back_ground"
